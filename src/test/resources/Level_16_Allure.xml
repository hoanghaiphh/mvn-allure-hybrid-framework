<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="NopCommerce Automation Testing" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="commons.MethodListener"/>
        <listener class-name="reportConfig.AllureListener"/>
    </listeners>

    <test name="Run on Firefox browser">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="nopcommerce.user.Level_16_Allure"/>
        </classes>
    </test>

    <test name="Run on Chrome browser">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="nopcommerce.user.Level_16_Allure"/>
        </classes>
    </test>

    <test name="Run on Edge browser">
        <parameter name="browser" value="Edge"/>
        <classes>
            <class name="nopcommerce.user.Level_16_Allure"/>
        </classes>
    </test>

</suite>