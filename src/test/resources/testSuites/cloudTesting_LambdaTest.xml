<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="LambdaTest">

    <listeners>
        <listener class-name="reportConfigs.AllureListener"/>
    </listeners>

    <test name="Run on Firefox 137.0 / Linux ">
        <parameter name="browser" value="Firefox"/>
        <parameter name="browserVersion" value="137.0"/>
        <parameter name="platform" value="Linux"/>
        <classes>
            <class name="cloudTesting.LambdaTest"/>
        </classes>
    </test>

    <test name="Run on Chrome 135.0 / Windows 10 ">
        <parameter name="browser" value="Chrome"/>
        <parameter name="browserVersion" value="135.0"/>
        <parameter name="platform" value="Windows 10"/>
        <classes>
            <class name="cloudTesting.LambdaTest"/>
        </classes>
    </test>

    <test name="Run on Edge 135.0 / Windows 11 ">
        <parameter name="browser" value="Edge"/>
        <parameter name="browserVersion" value="135.0"/>
        <parameter name="platform" value="Windows 11"/>
        <classes>
            <class name="cloudTesting.LambdaTest"/>
        </classes>
    </test>

    <test name="Run on Safari 18 / MacOS Sequoia ">
        <parameter name="browser" value="Safari"/>
        <parameter name="browserVersion" value="18"/>
        <parameter name="platform" value="MacOS Sequoia"/>
        <classes>
            <class name="cloudTesting.LambdaTest"/>
        </classes>
    </test>

</suite>