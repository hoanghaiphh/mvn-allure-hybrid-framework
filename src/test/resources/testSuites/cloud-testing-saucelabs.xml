<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SauceLabs">

    <listeners>
        <listener class-name="reportConfigs.AllureListener"/>
    </listeners>

    <parameter name="platform" value="SAUCE_LABS"/>

    <test name="Run on Firefox latest / Linux ">
        <parameter name="browserName" value="Firefox"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="osName" value="Linux"/>
        <classes>
            <class name="cloudTesting.SauceLabs"/>
        </classes>
    </test>

    <test name="Run on Chrome 133 / Windows 10 ">
        <parameter name="browserName" value="Chrome"/>
        <parameter name="browserVersion" value="133"/>
        <parameter name="osName" value="Windows 10"/>
        <classes>
            <class name="cloudTesting.SauceLabs"/>
        </classes>
    </test>

    <test name="Run on Edge latest / Windows 11 ">
        <parameter name="browserName" value="Edge"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="osName" value="Windows 11"/>
        <classes>
            <class name="cloudTesting.SauceLabs"/>
        </classes>
    </test>

    <test name="Run on Safari latest / Mac BigSur ">
        <parameter name="browserName" value="Safari"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="osName" value="macOS 11.00"/>
        <classes>
            <class name="cloudTesting.SauceLabs"/>
        </classes>
    </test>

</suite>