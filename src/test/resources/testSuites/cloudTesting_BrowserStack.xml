<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="BrowserStack">

    <listeners>
        <listener class-name="reportConfigs.AllureListener"/>
    </listeners>

    <parameter name="platform" value="BROWSER_STACK"/>

    <test name="Run on Firefox latest / Windows 11 ">
        <parameter name="browserName" value="Firefox"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="osName" value="Windows"/>
        <parameter name="osVersion" value="11"/>
        <classes>
            <class name="cloudTesting.BrowserStack"/>
        </classes>
    </test>

    <test name="Run on Chrome 132.0 / Windows 10 ">
        <parameter name="browserName" value="Chrome"/>
        <parameter name="browserVersion" value="132.0"/>
        <parameter name="osName" value="Windows"/>
        <parameter name="osVersion" value="10"/>
        <classes>
            <class name="cloudTesting.BrowserStack"/>
        </classes>
    </test>

    <test name="Run on Edge latest / Windows 10 ">
        <parameter name="browserName" value="Edge"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="osName" value="Windows"/>
        <parameter name="osVersion" value="10"/>
        <classes>
            <class name="cloudTesting.BrowserStack"/>
        </classes>
    </test>

    <test name="Run on Safari 18.1 / Mac Sequoia ">
        <parameter name="browserName" value="Safari"/>
        <parameter name="browserVersion" value="18.1"/>
        <parameter name="osName" value="OS X"/>
        <parameter name="osVersion" value="Sequoia"/>
        <classes>
            <class name="cloudTesting.BrowserStack"/>
        </classes>
    </test>

</suite>