<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Data Table" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="reportConfigs.MethodListener"/>
        <listener class-name="reportConfigs.AllureListener"/>
    </listeners>

    <test name="Run on Firefox browser">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="basic.Data_Table_1"/>
            <class name="basic.Data_Table_2"/>
        </classes>
    </test>

    <test name="Run on Chrome browser">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="basic.Data_Table_1"/>
            <class name="basic.Data_Table_2"/>
        </classes>
    </test>

    <test name="Run on Edge browser">
        <parameter name="browser" value="Edge"/>
        <classes>
            <class name="basic.Data_Table_1"/>
            <class name="basic.Data_Table_2"/>
        </classes>
    </test>

</suite>