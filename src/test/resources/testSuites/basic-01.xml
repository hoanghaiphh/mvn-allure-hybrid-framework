<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Basic" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="reportConfigs.MethodListener"/>
        <listener class-name="reportConfigs.AllureListener"/>
    </listeners>

    <parameter name="platform" value="LOCAL"/>

    <test name="Run on Firefox browser">
        <parameter name="browserName" value="Firefox"/>
        <classes>
            <class name="basic.Page_Factory"/>
            <class name="basic.Pattern_Object"/>
            <class name="basic.Jira"/>
        </classes>
    </test>

    <test name="Run on Chrome browser">
        <parameter name="browserName" value="Chrome"/>
        <classes>
            <class name="basic.Page_Factory"/>
            <class name="basic.Pattern_Object"/>
            <class name="basic.Jira"/>
        </classes>
    </test>

    <test name="Run on Edge browser">
        <parameter name="browserName" value="Edge"/>
        <classes>
            <class name="basic.Page_Factory"/>
            <class name="basic.Pattern_Object"/>
            <class name="basic.Jira"/>
        </classes>
    </test>

</suite>