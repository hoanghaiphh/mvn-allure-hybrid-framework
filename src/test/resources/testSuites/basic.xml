<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Basic Testing" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="reportConfigs.MethodListener"/>
        <listener class-name="reportConfigs.AllureListener"/>
    </listeners>

    <test name="Sort Data - Run on Firefox browser">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="basic.Sort_Data"/>
        </classes>
    </test>

    <test name="Sort Data - Run on Chrome browser">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="basic.Sort_Data"/>
        </classes>
    </test>

    <test name="Sort Data - Run on Edge browser">
        <parameter name="browser" value="Edge"/>
        <classes>
            <class name="basic.Sort_Data"/>
        </classes>
    </test>

    <test name="Upload Files - Run on Firefox browser">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="basic.Upload_Files"/>
        </classes>
    </test>

    <test name="Upload Files - Run on Chrome browser">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="basic.Upload_Files"/>
        </classes>
    </test>

    <test name="Upload Files - Run on Edge browser">
        <parameter name="browser" value="Edge"/>
        <classes>
            <class name="basic.Upload_Files"/>
        </classes>
    </test>

    <test name="Data Table 1 - Run on Firefox browser">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="basic.Data_Table_1"/>
        </classes>
    </test>

    <test name="Data Table 1 - Run on Chrome browser">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="basic.Data_Table_1"/>
        </classes>
    </test>

    <test name="Data Table 1 - Run on Edge browser">
        <parameter name="browser" value="Edge"/>
        <classes>
            <class name="basic.Data_Table_1"/>
        </classes>
    </test>

    <test name="Data Table 2 - Run on Firefox browser">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="basic.Data_Table_2"/>
        </classes>
    </test>

    <test name="Data Table 2 - Run on Chrome browser">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="basic.Data_Table_2"/>
        </classes>
    </test>

    <test name="Data Table 2 - Run on Edge browser">
        <parameter name="browser" value="Edge"/>
